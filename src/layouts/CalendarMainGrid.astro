---
import '../styles/global.css';
---

<div class="parent">
  <div class="cell1">
    <slot name="gridL" />
  </div>
  <div class="cell2">
    <slot name="gridR" />
  </div>
</div>

<style>
  .parent {
    display: grid;
    grid-template-columns: 18.75rem 2fr;
    grid-template-rows: 1fr;
    column-gap: 0;
    row-gap: 0;
    height: 35rem;
    box-shadow: 0rem 0.125rem 0.25rem 0rem rgba(0,0,0,0.25);
    border-radius: 1.25rem;
  }

  .cell1 { grid-area: 1 / 1 / 2 / 2; }
  .cell2 { grid-area: 1 / 2 / 2 / 3; }
</style>
---
import "../styles/global.css";
const { dayName, monthName, dayNumber } = Astro.props;
---

<div class="inner__topContainer">
  <div class="todays__day">{dayName}</div>
  <div class="todays__day">{monthName}</div>
</div>
<div class="todays__date">{dayNumber}</div>

<style>
  .inner__topContainer {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 100%;
		gap: 10px;
	}

	.todays__date {
		font-size: 150px;
		color: #ffffff;
		font-weight: 700;
		line-height: 0.8;
	}

	.todays__day {
		font-size: 30px;
		font-weight: bold;
		color: #000000;
	}

	.todays__day:first-of-type {
		color: #FF3C3C;
	}

	.todays__day:nth-of-type(2) {
		color: #707070
	}
</style>
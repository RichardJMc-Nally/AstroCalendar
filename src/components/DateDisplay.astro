---
import "../styles/global.css";
const { dayName, monthName, dayNumber } = Astro.props;
---

<div class="inner__topContainer">
  <div class="todays__day">{dayName}</div>
  <div class="todays__day">{monthName}</div>
</div>
<div class="todays__date">{dayNumber}</div>

<style>
  .inner__topContainer {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 100%;
		gap: 0.625rem;
	}

	.todays__date {
		font-size: 9.375rem;
		color: var(--white);
		font-weight: 700;
		line-height: 0.8;
	}

	.todays__day {
		font-size: 1.875rem;
		font-weight: bold;
	}

	.todays__day:first-of-type {
		color: var(--red);
	}

	.todays__day:nth-of-type(2) {
		color: var(--grey)
	}
</style>
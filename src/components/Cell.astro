---
import "../styles/global.css";

const { isCheckedOff = false, number = null, isPrePost = false, isPubHoliday = false } = Astro.props;

const textClass = `cell__text ${isPrePost ? 'pre__postDate' : ''} ${isPubHoliday ? 'publicHoliday' : ''}`;

const cellClassList = `cell ${isCheckedOff ? 'checkedOff' : ''}`;
---

<div class={cellClassList}>
  {number !== null ? <div class={textClass}>{number}</div> : <slot />}
</div>

<style>
  .cell {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
    box-shadow: 0px 2px 4px 0px var(--transparent-black);
    border-radius: 20px;
  }

  .checkedOff {
		box-shadow: 0px 2px 4px 0px var(--transparent-black) inset !important;
		background-color: var(--background-colour);
	}

  .cell__text {
		font-size: 22px;
		font-weight: bold;
		color: var(--dark-grey);
	}

  .pre__postDate {
		color: var(--red) !important;
	}

  .publicHoliday {
    color: var(--teal) !important;
  }
</style>


					<Cell slot="cell48" isCheckedOff={false} number={6} isPrePost={true} />
					<Cell slot="cell49" isCheckedOff={false} number={7} isPrePost={true} />
					<Cell slot="cell50" isCheckedOff={false} number={8} isPrePost={true} />
					<Cell slot="cell51" isCheckedOff={false} number={9} isPrePost={true} />
				</CalendarRightGrid>
			</CalendarMainGrid>
		</BaseLayout>
	</body>
</html>

<style>
	.CalendarLeftGrid,
	.CalendarRightGrid {
		margin: 0;
		padding: 0;
	}
	/* Calendar Left */
	.top__container {
		display: flex;
		align-items: center;
		justify-content: center;
		flex-direction: column;
		height: 100%;
		width: 100%;
		border-top-left-radius: 20px;
	}

	.bottom__container {
		display: flex;
		align-items: center;
		justify-content: center;
		flex-direction: column;
		height: 100%;
		width: 100%;
		border-bottom-left-radius: 20px;
		gap: 10px;
	}
	/* Calendar Left */
</style>
